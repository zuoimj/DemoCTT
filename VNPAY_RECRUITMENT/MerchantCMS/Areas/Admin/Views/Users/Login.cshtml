@{
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        @if (TempData["RspCode"] != null)
        {
            if ((string)TempData["RspCode"] != "00")
            {
                <span class="error">Tên đăng nhập hoặc mật khẩu chưa đúng</span>
            }
        }
    </div>
</div>

<form id="loginForm" class="form-login" method="POST" action="@Url.Action("Login")">
    <fieldset>
        <div class="form-group">
            <span class="input-icon">
                <input class="form-control" name="username" placeholder="Tên đăng nhập">
                <i class="fa icons-form fa-envelope"></i>
            </span>
        </div>
        <div class="form-group">
            <span class="input-icon">
                <input type="password" class="form-control password" name="password" placeholder="Mật khẩu">
                <i class="fa icons-form fa-lock"></i>
            </span>
        </div>
        <div class="form-actions">
            <div class="form-group">
                <input class="btn btn-primary form-control" type="submit" value="ĐĂNG NHẬP">
            </div>
        </div>
    </fieldset>
</form>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#loginForm').validate({
                rules: {
                    username: {
                        required: true,
                        maxlength: 26
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        maxlength: 15
                    }
                },
                messages: {
                    username: {
                        required: 'Vui l&#242;ng nhập v&#224;o tên đăng nhập',
                        regxEmail: 'Địa chỉ email kh&#244;ng đ&#250;ng định dạng',
                        maxlength: 'Địa chỉ email của bạn qu&#225; độ d&#224;i cho ph&#233;p'
                    },
                    password: {
                        required: 'Vui l&#242;ng nhập v&#224;o Mật khẩu',
                        minlength: 'Mật khẩu phải c&#243; &#237;t nhất 6 k&#253; tự',
                        maclength: 'Mật khẩu c&#243; tối đa 15 k&#253; tự'
                    }

                }
            });

            $(document).on('keydown', '#username', function (e) {
                if (e.keyCode === 32)
                    return false;
            });
            $(document).on('keydown', '#password', function (e) {
                if (e.keyCode === 32)
                    return false;
            });
        });
    </script>
}