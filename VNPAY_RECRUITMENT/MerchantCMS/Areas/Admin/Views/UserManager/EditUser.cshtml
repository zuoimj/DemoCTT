@using VNPRECRUITMENT.Areas.Admin.Models
@model VNPRECRUITMENT.Models.PROC_CMS_USERS_SELECTBYID_Result
@{
    ViewBag.title = "Cập nhật người sử dụng";
}
<div class="container container-edit">
    <div class="page-header">
        <h1>@ViewBag.title</h1>
    </div>
    <div class="row">
        @if (Model != null)
        {
            <div class="col-md-12">
                @if (TempData["RspCode"] != null)
                {
                    if ((string)TempData["RspCode"] != "00")
                    {
                        <div class="alert alert-danger" role="alert">Lỗi trong quá trình sửa</div>
                    }
                }
            </div>
            <div class="col-md-8">
                <form id="frmEdit" class="form-horizontal" role="form" action="@Url.Action("EditUser")" method="post">
                    <input type="hidden" name="UserId" value="@Model.USER_ID" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Tên đăng nhập<span class="symbol required" />: </label>
                        <div class="col-sm-7">
                            <span>@Model.USERNAME</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Họ tên<span class="symbol required" />: </label>
                        <div class="col-sm-7">
                            <input type="text" value="@Model.FULLNAME" class="form-control" id="Fullname" name="Fullname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Email<span class="symbol required" />: </label>
                        <div class="col-sm-7">
                            <input type="email" value="@Model.EMAIL" class="form-control" id="Email" name="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Phân quyền: </label>
                        <div class="col-sm-7">
                            @Html.DropDownList("RoleId", (IEnumerable<SelectListItem>) ViewData["roleList"], "Chọn quyền", new {@class = "form-control search-select", data_style = "btn-primary", aria_expanded = "false"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Trạng thái: </label>
                        <div class="col-sm-7">
                            <select class="form-control search-select" id="Islockedout" name="Islockedout">
                                <option value="0">Hoạt động</option>
                                <option value="1">Tạm khóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="clearfix form-actions center">
                        <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                        <a onclick=" javascript:history.go(-1); " class="btn btn-dark-grey btn-sm">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        }
    </div>
</div>