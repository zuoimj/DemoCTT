@model VNPRECRUITMENT.Models.Candidate

@{
    ViewBag.Title = "Ứng viên";
}

<div class="page-header">
    <h1>@ViewBag.title</h1>
</div>

<div class="form-horizontal">

    @foreach (var item in ViewBag.CV)
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">Tên ứng viên:</label>
            <div class="col-md-10">
                <div class="co  l-sm-10">
                    <label>@item.CANDIDATE_NAME</label>
                </div>
            </div>
        </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Vị trí:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.JOB_NAME</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Phòng ban:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.GROUP_NAME</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Giới tính:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                @if (@item.SEX == 1)
                {
                <span class="label label-default">Nam</span>
                }
                else if (@item.SEX == 0)
                {
                <span class="label label-green">Nữ</span>
                }
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Số điện thoại:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.PHONENUMBER</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Email:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.EMAIL</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Ngày ứng tuyển:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.CREATED_DATE</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Mô tả của ứng viên:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                <label>@item.CV_DESCRIPTION</label>
            </div>
        </div>
    </div>
        if (item.CV_LINK != "")
        {
            <div class="form-group">
            <label class="col-sm-2 control-label">CV:</label>
                <div class="col-md-10">
                    <div class="co  l-sm-10">
                        <label><a target="_blank" href="@item.CV_LINK">@item.CV_LINK</a></label>
                    </div>
                </div>
            </div>
        }
        else if(ViewBag.Filename != null)
        { 
            <div class="form-group">
            <label class="col-sm-2 control-label">CV FILE:</label>
                <div class="col-md-10">
                    <div class="co  l-sm-10">
                        <label>@ViewBag.Filename</label>
                        <a href="@Url.Action("Download","Candidates")">Download CV ứng viên</a>
                    </div>
                </div>
            </div>
        }
    <div class="form-group">
        <label class="col-sm-2 control-label">Trạng thái:</label>
        <div class="col-md-10">
            <div class="co  l-sm-10">
                @if (item.CV_STATUS == 1)
                {
                <span class="label label-warning">Chưa xem</span>
                }
                else if (item.CV_STATUS == 2)
                {
                <span class="label label-info">Chờ phỏng vấn</span>
                }
                else if (item.CV_STATUS == 3)
                {
                <span class="label label-success">Đã duyệt</span>
                }
                else if (item.CV_STATUS == 4)
                {
                <span class="label label-danger">Loại</span>
                }
                else if (item.CV_STATUS == 5)
                {
                    <span class="label label-success">Đã xem</span>

                }
            </div>
        </div>
    </div>
        


        <div class="form-group">
            <form class="form-horizontal" role="form" action="@Url.Action("Edit")" method="post">

                    <label class="col-sm-2 control-label">Cập nhật trạng thái:</label>
                    <div class="col-sm-10">
                        <select class="form-control search-select" id="status" name="status" oninvalid="alert('Bạn phải chọn trạng thái!');" required>
                            <option value="1" >Chưa xem</option>
                            <option value="2" >Chờ phỏng vấn</option>
                            <option value="3" >Đã duyệt</option>
                            <option value="4" >Loại</option>
                            <option value="5" selected="selected">Đã xem</option>
                        </select>
                    </div>

                <div class="clear"></div>
                <div class="clearfix form-actions center">
                    <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                    <a href="@Url.Action("Index", "Candidates")" class="btn btn-dark-grey btn-sm">Hủy bỏ</a>
                </div>
            </form>
        </div>
    }
</div>

