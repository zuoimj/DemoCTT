@model VNPRECRUITMENT.Models.Job_Location

@{
    ViewBag.Title = "Thêm khu vực";
}


@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    <form class="form-horizontal" role="form" action="@Url.Action("Create")" method="post">
        <div class="page-header">
            <h1>@ViewBag.title</h1>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Khu vực</label>
            <div class="col-sm-10">
                <input type="text" name="Location_Name" placeholder="Nhập khu vực" class="form-control">
            </div>
        </div>
        <div class="clear"></div>
        <div class="clearfix form-actions center">
            <button type="submit" class="btn btn-primary btn-sm">Thêm mới</button>
            <a href="@Url.Action("Index", "Job_Location")" class="btn btn-dark-grey btn-sm">Hủy bỏ</a>
        </div>
    </form>
}


